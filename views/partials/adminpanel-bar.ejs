<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
  <div class="d-flex align-items-center justify-content-between">
    <i class="bi bi-list toggle-sidebar-btn"></i>
    <a href="/" class="logo d-flex align-items-center">
      <img src="/static/images/ravique-logo.png" alt="" />
      <span class="d-none d-lg-block">Admin </span>
    </a>
  </div>

  <% if (isAuth) { %>
  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">
      <li class="nav-item pe-5">
        <a
          class="nav-link nav-profile d-flex align-items-center pe-0"
          href="/admin/adminpanel"
        >
          <span class="ps-2"><%= fullname %></span>
        </a>
      </li>
    </ul>
  </nav>
  <% }%>
</header>
<!-- End Header -->

<!-- ======= Sidebar ======= -->
<aside id="sidebar" class="sidebar">
  <ul class="sidebar-nav" id="sidebar-nav">
    <% if (isAdmin) { %>
    <li class="nav-item">
      <a
        class="nav-link collapsed"
        data-bs-target="#components-nav"
        data-bs-toggle="collapse"
        href="#"
      >
        <i class="bi bi-menu-button-wide"></i><span>Kategoriler</span
        ><i class="bi bi-chevron-down ms-auto"></i>
      </a>
      <ul
        id="components-nav"
        class="nav-content collapse"
        data-bs-parent="#sidebar-nav"
      >
        <li>
          <a href="/admin/headcategory">
            <i class="bi bi-circle"></i><span>Genel Kategori</span>
          </a>
        </li>
        <li>
          <a href="/admin/productcategory">
            <i class="bi bi-circle"></i><span>Ürün Kategori</span>
          </a>
        </li>
        <li>
          <a href="/admin/splidecategory">
            <i class="bi bi-circle"></i><span>Splide Kategori</span>
          </a>
        </li>
      </ul>
    </li>
    <% } %> <% if (isAdmin || isModerator) { %>
    <li class="nav-item">
      <a
        class="nav-link collapsed"
        data-bs-target="#forms-nav"
        data-bs-toggle="collapse"
        href="#"
      >
        <i class="bi bi-journal-text"></i><span>Alanlar</span
        ><i class="bi bi-chevron-down ms-auto"></i>
      </a>
      <ul
        id="forms-nav"
        class="nav-content collapse"
        data-bs-parent="#sidebar-nav"
      >
        <li>
          <a href="/admin/section/create">
            <i class="bi bi-circle"></i><span>Alan Ekle</span>
          </a>
        </li>
        <li>
          <a href="/admin/sections">
            <i class="bi bi-circle"></i><span>Alanları Görüntüle</span>
          </a>
        </li>
      </ul>
    </li>

    <li class="nav-item">
      <a
        class="nav-link collapsed"
        data-bs-target="#tables-nav"
        data-bs-toggle="collapse"
        href="#"
      >
        <i class="bi bi-layout-text-window-reverse"></i><span>Ürünler</span
        ><i class="bi bi-chevron-down ms-auto"></i>
      </a>
      <ul
        id="tables-nav"
        class="nav-content collapse"
        data-bs-parent="#sidebar-nav"
      >
        <li>
          <a href="/admin/product/create">
            <i class="bi bi-circle"></i><span>Ürün Ekle</span>
          </a>
        </li>
        <li>
          <a href="/admin/products">
            <i class="bi bi-circle"></i><span>Ürünleri Görüntüle</span>
          </a>
        </li>
      </ul>
    </li>
    <% } %> <% if (isAdmin) { %>
    <li class="nav-heading">Kullanıcı İşlemleri</li>

    <li class="nav-item">
      <a class="nav-link collapsed" href="/admin/users">
        <i class="bi bi-person"></i>
        <span>Kullanıcılar</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link collapsed" href="/admin/roles">
        <i class="bi bi-question-circle"></i>
        <span>Roller</span>
      </a>
    </li>
    <% } %>

    <li class="nav-item">
      <a class="nav-link collapsed" href="/account/logout">
        <i class="bi bi-card-list"></i>
        <span>Çıkış Yap</span>
      </a>
    </li>
  </ul>
</aside>
