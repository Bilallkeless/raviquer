<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/adminpanel-head') %>
  </head>
  <body>
    <%- include('../partials/adminpanel-bar') %>

    <main id="main" class="main">
      <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-lg-7">
            <div class="mt-3">
              <% if (typeof message != "undefined") { %>
              <div class="alert alert-<%= message.class %>">
                <%= message.text %>
              </div>
              <% } %>
              <form
                method="post"
                enctype="multipart/form-data"
                action="/admin/product/create?_csrf=<%= csrfToken %>"
              >
                <div class="mb-3 row">
                  <label
                    for="kategori"
                    class="col-sm-3 col-form-label text-sm-end fw-bold"
                  >
                    Kategori
                  </label>
                  <div class="col-sm-9">
                    <select name="kategori" id="kategori" class="form-select">
                      <option value="-1" selected>Seçiniz</option>
                      <% categories.forEach(category => { %>
                      <option value="<%= category.dataValues.category %>">
                        <%= category.dataValues.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label
                    for="urunkategori"
                    class="col-sm-3 col-form-label text-sm-end fw-bold"
                  >
                    Ürün Kategorisi
                  </label>
                  <div class="col-sm-9">
                    <select
                      name="urunkategori"
                      id="urunkategori"
                      class="form-select"
                    >
                      <option value="-1" selected>Seçiniz</option>
                      <% productcategories.forEach(productcategory => { %>
                      <option
                        value="<%= productcategory.dataValues.productcategory %>"
                      >
                        <%= productcategory.dataValues.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label
                    for="urunismi"
                    class="col-sm-3 col-form-label text-sm-end fw-bold"
                  >
                    Ürün İsmi
                  </label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="urunismi"
                    name="urunismi" value="<%= (typeof values != "undefined") ?
                    values.urunismi : "" %>" />
                  </div>
                </div>

                <div class="mb-3 row">
                  <label
                    for="fiyat"
                    class="col-sm-3 col-form-label text-sm-end fw-bold"
                  >
                    Fiyat
                  </label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="fiyat"
                    name="fiyat" value="<%= (typeof values != "undefined") ?
                    values.fiyat : "" %>" />
                  </div>
                </div>

                <div class="mb-3 row">
                  <label
                    for="urunaciklama"
                    class="col-sm-3 col-form-label text-sm-end fw-bold"
                  >
                    Açıklama
                  </label>
                  <div class="col-sm-9">
                    <textarea
                      id="urunaciklama"
                      name="urunaciklama"
                      rows="4"
                      class="form-control"
                    ></textarea>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label
                    for="resim"
                    class="col-sm-3 col-form-label text-sm-end fw-bold"
                  >
                    Resim
                  </label>
                  <div class="col-sm-9">
                    <input
                      type="file"
                      class="form-control"
                      id="resim"
                      name="resim"
                    />
                  </div>
                </div>

                <div class="mb-3 row">
                  <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary">
                      Ürün Resim Detayı Ekle
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
