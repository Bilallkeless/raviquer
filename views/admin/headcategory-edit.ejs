<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/adminpanel-head') %>
  </head>
  <body class="bg-light font-sans">
    <%- include('../partials/adminpanel-bar') %>

    <main id="main" class="main">
      <div class="container">
        <div class="row justify-content-center mt-5">
          <div class="col-lg-7">
            <div class="card">
              <div class="card-body">
                <form method="post" class="mb-4">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <input
                    type="hidden"
                    name="headcategoryid"
                    value="<%= headCategory.headcategoryid %>"
                  />
                  <div class="mb-3">
                    <label for="name" class="form-label">Kategori İsmi</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      name="name"
                      value="<%= headCategory.name %>"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
                <p class="mb-4 text-muted">
                  Kategori Sayısı: <%= countSection %>
                </p>
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Kategori</th>
                        <th scope="col">İşlemler</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% sections.forEach(section => { %>
                      <tr>
                        <td>#<%= section.dataValues.sectionid %></td>
                        <td>
                          <img
                            src="/static/images/section/<%= section.dataValues.resim %>"
                            class="img-fluid rounded"
                            style="max-width: 100px"
                            alt=""
                          />
                        </td>
                        <td><%= section.dataValues.baslik %></td>
                        <td><%= section.dataValues.headcategory.name %></td>
                        <td>
                          <a
                            href="/admin/section/<%= section.dataValues.sectionid %>"
                            class="btn btn-primary me-2"
                            >Düzenle</a
                          >
                          <a
                            href="/admin/section/delete/<%= section.dataValues.sectionid %>"
                            class="btn btn-danger"
                            >Sil</a
                          >
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
