<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/adminpanel-head') %>
  </head>
  <body>
    <%- include('../partials/adminpanel-bar') %>

    <main id="main" class="main">
      <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-lg-7">
            <table class="table table-striped">
              <thead class="bg-light">
                <tr class="text-left">
                  <th
                    scope="col"
                    class="px-2 py-1 text-sm font-medium text-gray-500 uppercase w-20"
                  >
                    id
                  </th>
                  <th
                    scope="col"
                    class="px-2 py-1 text-sm font-medium text-gray-500 uppercase w-40"
                  >
                    Rol İsmi
                  </th>
                  <th
                    scope="col"
                    class="px-2 py-1 text-sm font-medium text-gray-500 uppercase"
                  >
                    Kullanıcı Sayısı
                  </th>
                  <th
                    scope="col"
                    class="px-2 py-1 text-sm font-medium text-gray-500 uppercase w-32"
                  ></th>
                </tr>
              </thead>
              <tbody>
                <% roles.forEach(role => { %>
                <tr>
                  <td class="px-2 py-1">#<%= role.id %></td>
                  <td class="px-2 py-1"><%= role.rolename %></td>
                  <td class="px-2 py-1"><%= role.user_count %></td>
                  <td class="px-2 py-1">
                    <a
                      href="/admin/roles/<%= role.id %>"
                      class="btn btn-primary btn-sm"
                      >Düzenle</a
                    >
                    <a
                      href="/admin/role/delete/<%= role.sectionid %>"
                      class="btn btn-danger btn-sm"
                      >Sil</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
