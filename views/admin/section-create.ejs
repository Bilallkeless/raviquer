<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/adminpanel-head') %>
  </head>
  <body>
    <%- include('../partials/adminpanel-bar') %>

    <main id="main" class="main">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-4">
            <% if (typeof message != "undefined") { %>
            <div class="alert alert-<%= message.class %>">
              <%= message.text %>
            </div>
            <% } %>
            <form
              method="post"
              enctype="multipart/form-data"
              action="/admin/section/create?_csrf=<%= csrfToken %>"
            >
              <div class="mb-3">
                <label for="baslik" class="form-label">Başlık</label>
                <input type="text" class="form-control" id="baslik"
                name="baslik" value="<%= (typeof values != "undefined") ?
                values.baslik : "" %>" />
              </div>

              <div class="mb-3">
                <label for="aciklama" class="form-label">Açıklama</label>
                <input type="text" class="form-control" id="aciklama"
                name="aciklama" value="<%= (typeof values != "undefined") ?
                values.aciklama : "" %>" />
              </div>

              <div class="mb-3">
                <label for="fiyat" class="form-label">Fiyat</label>
                <input type="text" class="form-control" id="fiyat" name="fiyat"
                value="<%= (typeof values != "undefined") ? values.fiyat : ""
                %>" />
              </div>

              <div class="mb-3">
                <label for="resim" class="form-label">Resim</label>
                <input
                  type="file"
                  class="form-control"
                  id="resim"
                  name="resim"
                />
              </div>

              <div class="mb-3">
                <label for="kategori" class="form-label">Kategori</label>
                <select name="kategori" id="kategori" class="form-select">
                  <option value="-1" selected>Seçiniz</option>
                  <% categories.forEach(category => { %>
                  <option value="<%= category.dataValues.headcategoryid %>">
                    <%= category.dataValues.name %>
                  </option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <label for="urunkategori" class="form-label"
                  >Ürün Kategorisi</label
                >
                <select
                  name="urunkategori"
                  id="urunkategori"
                  class="form-select"
                >
                  <option value="-1" selected>Seçiniz</option>
                  <% productcategories.forEach(productcategory => { %>
                  <option
                    value="<%= productcategory.dataValues.productcategoryid %>"
                  >
                    <%= productcategory.dataValues.name %>
                  </option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3 d-grid">
                <button type="submit" class="btn btn-primary">Kaydet</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
