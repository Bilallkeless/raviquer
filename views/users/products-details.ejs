<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <!-- Splide CSS -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/@splidejs/splide@3/dist/css/splide.min.css"
    />
    <style>
      .splide__pagination__page {
        width: 12px;
        height: 12px;
        border: 2px solid #000;
        background-color: transparent;
        border-radius: 50%;
        margin-right: 8px;
      }

      .splide__pagination__page.is-active {
        background-color: #000;
      }

      .splide__pagination {
        display: flex !important;
        margin-bottom: 10px;
      }

      /* Splide slider sadece mobil ve tablet boyutlarında gösterilecek */
      @media (max-width: 1024px) {
        .splide {
          display: block;
        }

        .product-images {
          display: none;
        }
      }

      /* Resimler sadece masaüstü boyutlarında gösterilecek */
      @media (min-width: 1025px) {
        .product-images {
          display: block;
        }

        .splide {
          display: none;
        }
      }

      @media (max-width: 768px) {
        .splide__slide img {
          height: 128.4vw;
          min-height: unset;
        }
      }
    </style>
  </head>
  <body>
    <div class="nav-and-head-categories">
      <%- include('../partials/nav') %>
      <div class="product-head-categories hidden">
        <%- include('../partials/head-categories') %>
      </div>
    </div>

    <div class="">
      <div class="container mx-auto py-4 lg:px-[240px] sticky-container">
        <!-- Splide slider -->
        <div class="splide" id="product-slider">
          <div class="splide__track">
            <ul class="splide__list">
              <!-- Ürün Resimleri -->
              <li class="splide__slide">
                <img
                  src="/static/images/<%- headCategory.category %>/<%- productCategory.productcategory %>/urundetay/<%- product.detayresim1 %>"
                  class="w-full lg:h-[55.938rem] object-top object-cover mb-2"
                />
              </li>
              <li class="splide__slide">
                <img
                  src="/static/images/<%- headCategory.category %>/<%- productCategory.productcategory %>/urundetay/<%- product.detayresim2 %>"
                  class="w-full lg:h-[55.938rem] object-top object-cover mb-2"
                />
              </li>
              <li class="splide__slide">
                <img
                  src="/static/images/<%- headCategory.category %>/<%- productCategory.productcategory %>/urundetay/<%- product.detayresim3 %>"
                  class="w-full lg:h-[55.938rem] object-top object-cover mb-2"
                />
              </li>
            </ul>
          </div>
          <!-- Pagination konteynırı eklendi -->
          <div class="splide__pagination"></div>
        </div>

        <!-- Ürün Resimleri sadece masaüstü boyutlarında gösterilecek -->
        <div class="product-images lg:pr-8 relative">
          <!-- Ürün Resimleri -->
          <img
            src="/static/images/<%- headCategory.category %>/<%- productCategory.productcategory %>/urundetay/<%- product.detayresim1 %>"
            class="w-full lg:h-[55.938rem] object-top object-cover mb-2"
          />
          <img
            src="/static/images/<%- headCategory.category %>/<%- productCategory.productcategory %>/urundetay/<%- product.detayresim2 %>"
            class="w-full lg:h-[55.938rem] object-top object-cover mb-2"
          />
          <img
            src="/static/images/<%- headCategory.category %>/<%- productCategory.productcategory %>/urundetay/<%- product.detayresim3 %>"
            class="w-full lg:h-[55.938rem] object-top object-cover mb-2"
          />
        </div>

        <div
          class="product-details mt-8 md:mt-0 flex justify-center lg:flex lg:justify-start"
        >
          <!-- Ürün Bilgileri -->
          <div class="sticky-details">
            <h1 class="text-2xl font-medium mb-2 font-poppins">
              <%=product.urunismi %>
            </h1>
            <p class="text-xl font-semibold mb-2 font-poppins">
              <%=product.fiyat %>
            </p>
            <p
              class="text-gray-700 mb-4 break-words text-sm font-poppins max-w-[370px]"
            >
              <%=product.urunaciklama %>
            </p>
            <hr class="mb-4 max-w-[370px]" />
            <p class="text-gray-500 mb-2 font-poppins text-sm">
              Beden Kılavuzu
            </p>
            <div class="flex mb-4">
              <!-- Beden Seçenekleri -->
              <button
                class="size-button font-poppins font-medium"
                data-size="XS"
              >
                XS
              </button>
              <button
                class="size-button font-poppins font-medium"
                data-size="S"
              >
                S
              </button>
              <button
                class="size-button font-poppins font-medium"
                data-size="M"
              >
                M
              </button>
              <button
                class="size-button font-poppins font-medium"
                data-size="L"
              >
                L
              </button>
              <button
                class="size-button font-poppins font-medium"
                data-size="XL"
              >
                XL
              </button>
              <button
                class="size-button font-poppins font-medium"
                data-size="XXL"
              >
                XXL
              </button>
            </div>
            <hr class="mb-4 max-w-[370px]" />
            <a href="/constructionphase"
              ><button
                class="bg-black text-white py-3 px-4 max-w-[370px] text-sm w-full font-poppins transition duration-100 ease-in-out hover:bg-gray-300 hover:text-gray-700"
              >
                SEPETİME EKLE
              </button></a
            >
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer') %>

    <!-- Splide JS -->
    <script src="https://unpkg.com/@splidejs/splide@3/dist/js/splide.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        new Splide("#product-slider", {
          type: "fade",
          rewind: true,
          heightRatio: 0,
          pagination: true,
          arrows: true,
        }).mount();
      });
    </script>
    <script src="/static/js/navanimation.js"></script>
    <script src="/static/js/products.js"></script>
  </body>
</html>
